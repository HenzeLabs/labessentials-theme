<section id="text-block" class="text-block">
  <div class="text-content">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.body }}</p>
  </div>
</section>

{% schema %}
{
  "name": "Text Block",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading" },
    { "type": "textarea", "id": "body", "label": "Body Text" }
  ]
}
{% endschema %}
