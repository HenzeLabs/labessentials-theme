<section id="hero-with-text-and-image" class="hero-section">
  <div class="hero-content">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subheading }}</p>
    <a href="{{ section.settings.cta_url }}" class="btn">{{ section.settings.cta_text }}</a>
  </div>
  <div class="hero-image">
    <img src="{{ section.settings.image | image_url: 'master' }}" alt="{{ section.settings.image_alt }}" width="600" height="400">
  </div>
</section>

{% schema %}
{
  "name": "Hero with Text and Image",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading" },
    { "type": "text", "id": "subheading", "label": "Subheading" },
    { "type": "url", "id": "cta_url", "label": "CTA URL" },
    { "type": "text", "id": "cta_text", "label": "CTA Text" },
    { "type": "image_picker", "id": "image", "label": "Image" },
    { "type": "text", "id": "image_alt", "label": "Image Alt Text" }
  ]
}
{% endschema %}
